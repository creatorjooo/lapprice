# === 공식 API 키 (발급받은 것만 설정, 나머지는 비워두면 자동 스킵) ===

# 네이버 쇼핑 API (https://developers.naver.com)
NAVER_CLIENT_ID=
NAVER_CLIENT_SECRET=

# 쿠팡 파트너스 API (https://partners.coupang.com)
COUPANG_ACCESS_KEY=
COUPANG_SECRET_KEY=

# 11번가 Open API (https://openapi.11st.co.kr)
ELEVENTH_ST_API_KEY=

# === 크롤링 (API 키 불필요, 자동 작동) ===
# G마켓, 옥션, 다나와, 에누리, SSG닷컴, 롯데ON, 인터파크

# === 서버 설정 ===
PORT=3001
CACHE_TTL=300

# === 어필리에이트 수익화 설정 ===
AFFILIATE_ENABLED=true
COUPANG_AFFILIATE_SUBID_PREFIX=lapprice
DEEPLINK_CACHE_TTL=86400
CLICK_LOG_PATH=./server/logs/clicks.jsonl

# === 관리자 설정 ===
ADMIN_PASSWORD=

# === 자동 동기화 설정 ===
AUTO_SYNC_ENABLED=true
SYNC_INTERVAL_HOURS=24

# === 검증 기반 가격 노출 설정 ===
VERIFIED_ONLY_MODE=false
CLICK_TIME_VERIFY=true
VERIFICATION_STALE_MINUTES=360
VERIFICATION_TIMEOUT_MS=6500
STRICT_PRICE_GUARD=true
ALLOW_DEGRADED_REDIRECT=false
DISPLAY_PRICE_FRESH_MINUTES=360
LISTING_PRICE_TTL_SEC=300
CLICK_VERIFY_TIMEOUT_MS=2500
PRICE_TOKEN_SECRET=
VERIFICATION_LOG_PATH=./server/logs/verification.jsonl
NAVER_VERIFY_MIN_INTERVAL_MS=120
COUPANG_VERIFY_MIN_INTERVAL_MS=120
NAVER_FETCH_TIMEOUT_MS=12000

# === 전 플랫폼 스토어 확장 설정 ===
ENABLE_ALL_PLATFORM_ENRICH=true
PLATFORM_ENRICH_RESULT_LIMIT=12
PLATFORM_STORES_PER_SOURCE=2
PLATFORM_MATCH_SCORE_THRESHOLD=58
PLATFORM_ENRICH_TIMEOUT_MS=12000
PLATFORM_ENRICH_CONCURRENCY=3

# === 썸네일 외부 캐시 (R2/S3) ===
IMAGE_CACHE_PROVIDER=
IMAGE_CACHE_S3_ENDPOINT=
IMAGE_CACHE_S3_BUCKET=
IMAGE_CACHE_S3_REGION=auto
IMAGE_CACHE_S3_ACCESS_KEY=
IMAGE_CACHE_S3_SECRET_KEY=
IMAGE_CACHE_PUBLIC_BASE_URL=
IMAGE_CACHE_TIMEOUT_MS=8000
IMAGE_CACHE_MAX_BYTES=8388608
